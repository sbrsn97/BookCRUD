@model KitapVM

@{
    ViewData["Title"] = "KitapEkle";
}

<h4>Yeni Kitap</h4>
<hr />
<table class="table-bordered">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="KitapEkle">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="KitapAdi" class="control-label">Kitabın Adı</label>
                    <input asp-for="KitapAdi" class="form-control" />
                    <span asp-validation-for="KitapAdi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fiyat" class="control-label">Fiyatı</label>
                    <input asp-for="Fiyat" class="form-control" />
                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SayfaSayisi" class="control-label">Sayfa Sayısı</label>
                    <input asp-for="SayfaSayisi" class="form-control" />
                    <span asp-validation-for="SayfaSayisi" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Ekle" class="btn btn-outline-success" />
                </div>
            </form>
        </div>
    </div>
    <br />
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">Listeye geri dön</a>
    </div>
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
